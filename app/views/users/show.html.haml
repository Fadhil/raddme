- content_for :avatar do
  .avatar
    = image_tag @user.gravatar_url

.name
  = @user.fullname
  %span= @user.email
.exchange
  = form_for :user, url: friendships_path do |f|
    = f.hidden_field :id
    %div
      / = f.label :email
      %br/
      = f.email_field :email, value: nil, :placeholder => "add your email here"
    %div= f.submit "Exchange!", :class=> "button"

- if user_signed_in?
  .meta
    %p
      = link_to 'edit', edit_user_registration_path if @user == current_user
      = link_to 'logout', destroy_user_session_path, method: :delete